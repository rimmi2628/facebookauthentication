<body>
    <h1>Update Event</h1>
    <form action="/update-event" method="post">
      <input type="text" name="eventId" placeholder="Event ID" required><br> <br>
      <input type="text" name="summary" placeholder="Summary" required><br> <br>
      <input type="text" name="location" placeholder="Location"><br> <br>
      <input type="datetime-local" name="start" placeholder="Start Time" required><br> <br>
      <input type="datetime-local" name="end" placeholder="End Time" required><br> <br>
    

      <input type="submit" value="Update Event">
    </form>
</body>
